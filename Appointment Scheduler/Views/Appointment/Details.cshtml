@model Appointment

<h3 class="my-5">
    @Model.Appointment_Name
</h3>

<div class="row gx-5">
    <img alt="@Model.Appointment_Name" src="images/test.jpg" class="img-fluid col-5" />
    <div class="col-7">
        <h4>@Model.Appointment_Name</h4>
        <p>@Model.Appointment_Description</p>
        <h3 class="pull-right">@Model.EndDate.ToShortDateString()</h3>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-secondary"
                   asp-controller="Appointment"
                   asp-action="Index"
                   asp-route-Id="@Model.AppointmentId">Add to cart</a>
            </p>
        </div>
    </div>
</div>