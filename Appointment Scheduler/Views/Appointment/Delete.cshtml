@model Appointment

<h2>Delete Appointment @Model?.Appointment_Name</h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="AppointmentId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.AppointmentId
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Appointment_Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Appointment_Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Appointment_Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Appointment_Description
        </dd>

    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="AppointmentId" />
    <input type="submit" value="Delete appointment" class="btn btn-danger" 
    onclick="javascript: return confirm('Are you sure you want to delete this pie?');" />
</form>

<div>
    <a asp-controller="Appointment" asp-action="Index">Back to overview</a>
</div>