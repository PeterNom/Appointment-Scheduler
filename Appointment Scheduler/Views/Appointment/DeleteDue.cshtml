@model IEnumerable<Appointment>

<h2>Delete Due Appointments </h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var appointment in Model)
    {
        <partial name="_AppointmentCard" model="appointment" />
    }
</div>

@if (Model.Count()==0)
{
    <p class="alert-info">There are no due appointments</p>
}
else
{
    <form method="post" asp-action="DeleteDue">
        <input type="submit" value="Delete Due Appointment" class="btn btn-danger"
               onclick="javascript: return confirm('Are you sure you want to delete all due appointments?');" />
    </form>
}